{
  "id": "custom-test-list-files",
  "name": "List Files",
  "category": "Testing",
  "description": "Get a list of files from a directory",
  "fields": [
    {
      "key": "directory",
      "label": "Directory Path",
      "type": "text",
      "placeholder": "/path/to/directory",
      "helperText": "Directory to list files from",
      "defaultValue": "."
    },
    {
      "key": "pattern",
      "label": "File Pattern",
      "type": "text",
      "placeholder": "*.txt",
      "helperText": "Pattern to filter files (e.g., *.log)",
      "defaultValue": "*"
    },
    {
      "key": "recursive",
      "label": "Recursive",
      "type": "boolean",
      "helperText": "Include subdirectories",
      "defaultValue": false
    }
  ],
  "generators": {
    "powershell": "(config) => config.recursive ? `$files = Get-ChildItem -Path \"${config.directory}\" -Filter \"${config.pattern}\" -Recurse` : `$files = Get-ChildItem -Path \"${config.directory}\" -Filter \"${config.pattern}\"`",
    "bash": "(config) => config.recursive ? `files=$(find \"${config.directory}\" -name \"${config.pattern}\")` : `files=$(ls \"${config.directory}\"/${config.pattern})`"
  },
  "metadata": {
    "tags": ["input", "files", "directory"],
    "createdAt": "2025-11-03T00:00:00.000Z",
    "updatedAt": "2025-11-03T00:00:00.000Z"
  }
}
