{
  "id": "custom-test-log-message",
  "name": "Log Message",
  "category": "Testing",
  "description": "Write a message to a log file",
  "fields": [
    {
      "key": "logFile",
      "label": "Log File",
      "type": "text",
      "placeholder": "/var/log/script.log",
      "helperText": "Path to log file",
      "defaultValue": "script.log"
    },
    {
      "key": "message",
      "label": "Message",
      "type": "textarea",
      "placeholder": "Log entry...",
      "helperText": "Message to log",
      "defaultValue": ""
    },
    {
      "key": "includeTimestamp",
      "label": "Include Timestamp",
      "type": "boolean",
      "defaultValue": true
    }
  ],
  "generators": {
    "powershell": "(config) => config.includeTimestamp ? `Add-Content -Path \"${config.logFile}\" -Value \"$(Get-Date -Format 'yyyy-MM-dd HH:mm:ss') - ${config.message}\"` : `Add-Content -Path \"${config.logFile}\" -Value ${config.message}`",
    "bash": "(config) => config.includeTimestamp ? `echo \"$(date '+%Y-%m-%d %H:%M:%S') - ${config.message}\" >> \"${config.logFile}\"` : `echo ${config.message} >> \"${config.logFile}\"`"
  },
  "metadata": {
    "tags": ["error-handling", "logging", "file"],
    "createdAt": "2025-11-03T00:00:00.000Z",
    "updatedAt": "2025-11-03T00:00:00.000Z"
  }
}
