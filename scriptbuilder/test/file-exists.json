{
  "id": "custom-test-file-exists",
  "name": "Check File Exists",
  "category": "Testing",
  "description": "Verify that a file exists",
  "fields": [
    {
      "key": "filePath",
      "label": "File Path",
      "type": "text",
      "placeholder": "/path/to/file",
      "helperText": "Path to check",
      "defaultValue": ""
    },
    {
      "key": "errorMessage",
      "label": "Error Message",
      "type": "text",
      "placeholder": "File not found",
      "helperText": "Message to display if file does not exist",
      "defaultValue": "File not found"
    }
  ],
  "generators": {
    "powershell": "(config) => `if (-not (Test-Path \"${config.filePath}\")) {\\n    Write-Error \"${config.errorMessage}\"\\n    exit 1\\n}`",
    "bash": "(config) => `if [ ! -f \"${config.filePath}\" ]; then\\n    echo \"${config.errorMessage}\" >&2\\n    exit 1\\nfi`"
  },
  "metadata": {
    "tags": ["validation", "file", "check"],
    "createdAt": "2025-11-03T00:00:00.000Z",
    "updatedAt": "2025-11-03T00:00:00.000Z"
  }
}
