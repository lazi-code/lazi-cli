{
  "id": "custom-test-exit-script",
  "name": "Exit Script",
  "category": "Testing",
  "description": "Exit the script with a status code",
  "fields": [
    {
      "key": "exitCode",
      "label": "Exit Code",
      "type": "number",
      "placeholder": "0",
      "helperText": "0 = success, non-zero = error",
      "defaultValue": 0
    },
    {
      "key": "message",
      "label": "Exit Message",
      "type": "text",
      "placeholder": "Script completed",
      "helperText": "Optional message before exit",
      "defaultValue": ""
    }
  ],
  "generators": {
    "powershell": "(config) => config.message ? `Write-Host ${config.message}\\nexit ${config.exitCode}` : `exit ${config.exitCode}`",
    "bash": "(config) => config.message ? `echo ${config.message}\\nexit ${config.exitCode}` : `exit ${config.exitCode}`"
  },
  "metadata": {
    "tags": ["error-handling", "exit", "status"],
    "createdAt": "2025-11-03T00:00:00.000Z",
    "updatedAt": "2025-11-03T00:00:00.000Z"
  }
}
