{
  "id": "custom-test-write-file",
  "name": "Write to File",
  "category": "Testing",
  "description": "Write content to a file",
  "fields": [
    {
      "key": "filePath",
      "label": "File Path",
      "type": "text",
      "placeholder": "/path/to/output.txt",
      "helperText": "Path to write to",
      "defaultValue": ""
    },
    {
      "key": "content",
      "label": "Content",
      "type": "textarea",
      "placeholder": "Content to write...",
      "helperText": "Content or variable to write",
      "defaultValue": ""
    },
    {
      "key": "append",
      "label": "Append (vs Overwrite)",
      "type": "boolean",
      "helperText": "Add to file instead of replacing",
      "defaultValue": false
    }
  ],
  "generators": {
    "powershell": "(config) => config.append ? `Add-Content -Path \"${config.filePath}\" -Value ${config.content}` : `Set-Content -Path \"${config.filePath}\" -Value ${config.content}`",
    "bash": "(config) => config.append ? `echo ${config.content} >> \"${config.filePath}\"` : `echo ${config.content} > \"${config.filePath}\"`"
  },
  "metadata": {
    "tags": ["output", "file", "write"],
    "createdAt": "2025-11-03T00:00:00.000Z",
    "updatedAt": "2025-11-03T00:00:00.000Z"
  }
}
